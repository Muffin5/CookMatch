<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsFragment">


    <ImageView
        android:id="@+id/imageView_close_settings"
        android:layout_width="61dp"
        android:layout_height="50dp"
        android:src="@drawable/imagegegege"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.009" />

    <TextView
        android:id="@+id/textView111"
        android:layout_width="254dp"
        android:layout_height="42dp"
        android:gravity="center"
        android:text="Настройки"
        android:textColor="@color/black"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.021" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView111"
        android:layout_marginVertical="30dp">

        <LinearLayout
            android:id="@+id/settings_account"
            android:layout_width="391dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="59dp"
            android:background="@color/black"
            android:weightSum="100">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="850px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Настройки аккаунта"
                android:textSize="20dp"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:srcCompat="@drawable/imagegegege" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/notifications"
            android:layout_width="391dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="59dp"
            android:background="@color/black"
            android:weightSum="100">

            <TextView
                android:id="@+id/textView01"
                android:layout_width="850px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Уведомления"
                android:textSize="20dp"/>

            <ImageView
                android:id="@+id/imageView01"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:srcCompat="@drawable/imagegegege" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sub_and_likes"
            android:layout_width="391dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="59dp"
            android:background="@color/black"
            android:weightSum="100">

            <TextView
                android:id="@+id/textView02"
                android:layout_width="850px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Подписчики, лайки"
                android:textSize="20dp"/>

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/white"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/timer"
            android:layout_width="391dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="59dp"
            android:background="@color/black"
            android:weightSum="100">

            <TextView
                android:id="@+id/textView03"
                android:layout_width="850px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Таймер"
                android:textSize="20dp"/>

            <Switch
                android:id="@+id/switch2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/language"
            android:layout_width="391dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="59dp"
            android:background="@color/black"
            android:weightSum="100">

            <TextView
                android:id="@+id/textView04"
                android:layout_width="400px"
                android:layout_height="wrap_content"
                android:text="Язык"
                android:layout_gravity="center"
                android:textSize="20dp"/>

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:text="Русский" />

        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
</layout>